  }

  .premium-confirm-list {
    font-family: "Shippori Mincho", serif;
    font-size: 0.85rem;
    line-height: 2;
    letter-spacing: 0.12em;
    color: #fff;
    opacity: 0.8;
    margin: 0 0 1rem;
    padding-left: 0;
    list-style: none;
  }

  .premium-confirm-sub {
    font-family: "Shippori Mincho", serif;
    font-size: 0.78rem;
    line-height: 1.6;
    letter-spacing: 0.08em;
    color: #fff;
    opacity: 0.7;
    margin: 0 0 2rem;
  }

  .premium-confirm-btns {
    display: flex;
    gap: 1rem;
    align-items: center;
  }

  .premium-confirm-back {
    background: transparent;
    border: 1px solid #555;
    color: #fff;
    padding: 0.85rem 2rem;
    font-family: "Cormorant Garamond", serif;
    font-weight: 300;
    font-size: 0.9rem;
    letter-spacing: 0.25em;
    cursor: pointer;
    transition: opacity 0.2s;
  }

  .premium-confirm-back:hover { opacity: 0.75; }
</style>

<script>
  function initPremiumModal() {
    const overlay = document.getElementById("premiumOverlay");
    if (!overlay) return;

    const closeBtn = document.getElementById("premiumClose");
    const infoEl = document.getElementById("premiumInfo") as HTMLElement;
    const confirmEl = document.getElementById("premiumConfirm") as HTMLElement;

    function showInfo() {
      infoEl.style.display = "";
      confirmEl.style.display = "none";
    }

    (window as any).openPremiumModal = () => {
      showInfo();
      overlay.classList.add("open");
    };

    closeBtn?.addEventListener("click", () => {
      overlay.classList.remove("open");
      showInfo();
    });

    overlay.addEventListener("click", (e) => {
      if (e.target === overlay) { overlay.classList.remove("open"); showInfo(); }
    });

    // Step 1: 登録ボタン → 確認画面
    const subscribeBtn = document.getElementById("premiumModalSubscribeBtn") as HTMLButtonElement | null;
    subscribeBtn?.addEventListener("click", () => {
      var sbKey = Object.keys(localStorage).find(k => k.startsWith("sb-") && k.endsWith("-auth-token"));
      if (!sbKey) {
        overlay.classList.remove("open");
        (window as any).openAuthModal?.();
        return;
      }
      var tokenData = JSON.parse(localStorage.getItem(sbKey) || "{}");
      if (!tokenData.access_token) {
        overlay.classList.remove("open");
        (window as any).openAuthModal?.();
        return;
      }
      infoEl.style.display = "none";
      confirmEl.style.display = "";
    });

    // 戻る
    document.getElementById("premiumConfirmNo")?.addEventListener("click", showInfo);

    // Step 2: 確認 → Stripe Checkout
    const confirmYes = document.getElementById("premiumConfirmYes") as HTMLButtonElement | null;
    confirmYes?.addEventListener("click", async () => {
      try {
        var sbKey = Object.keys(localStorage).find(k => k.startsWith("sb-") && k.endsWith("-auth-token"));
        var tokenData = JSON.parse(localStorage.getItem(sbKey!) || "{}");
        var accessToken = tokenData.access_token;

        confirmYes.textContent = "処理中...";
        confirmYes.disabled = true;

        var res = await fetch("https://gupwbkyehfyrymybrhee.supabase.co/functions/v1/create-checkout-session", {
          method: "POST",
          headers: {
            "Authorization": "Bearer " + accessToken,
            "Content-Type": "application/json"
          },
          body: JSON.stringify({ return_url: location.origin })
        });
        var data = await res.json();
        if (data.url) {
          location.href = data.url;
        } else {
          alert(data.error || "エラーが発生しました");
          confirmYes.textContent = "進む";
          confirmYes.disabled = false;
        }
      } catch (e) {
        console.error(e);
        alert("エラーが発生しました");
        confirmYes.textContent = "進む";
        confirmYes.disabled = false;
      }
    });

    // ログイン時にPremiumModalも閉じる
    document.addEventListener("offframe:loggedin", () => {
      overlay.classList.remove("open");
    });
  }

  document.addEventListener("astro:page-load", initPremiumModal);
  initPremiumModal();
</script>
