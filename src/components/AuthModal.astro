<script is:inline src="https://cdn.jsdelivr.net/npm/@supabase/supabase-js@2/dist/umd/supabase.min.js"></script>
<script define:vars={{ SUPABASE_URL, SUPABASE_KEY }}>
  function showForm(id) {
    ["loginForm", "signupForm", "resetForm", "resetSentForm", "confirmEmailForm", "welcomeForm", "welcomePremiumForm"].forEach(f => {
      document.getElementById(f).style.display = "none";
    });
    document.getElementById(id).style.display = "block";
  }

  function closeModal(overlayEl) {
    overlayEl.classList.remove("open");
    setTimeout(() => showForm("loginForm"), 300);
  }

  function initAuth() {
    const overlayEl = document.getElementById("authOverlay");
    if (!overlayEl) return;
    if (!window.supabase) { setTimeout(initAuth, 100); return; }
    const supabase = window.supabase.createClient(SUPABASE_URL, SUPABASE_KEY);

    const closeBtn = document.getElementById("authClose");

    window.openAuthModal = () => {
      overlayEl.classList.add("open");
      showForm("loginForm");
    };

    closeBtn.addEventListener("click", () => closeModal(overlayEl));
    overlayEl.addEventListener("click", (e) => {
      if (e.target === overlayEl) closeModal(overlayEl);
    });

    document.getElementById("toSignup").addEventListener("click", () => showForm("signupForm"));
    document.getElementById("toLogin").addEventListener("click", () => showForm("loginForm"));
    document.getElementById("toReset").addEventListener("click", () => showForm("resetForm"));
    document.getElementById("resetToLogin").addEventListener("click", () => showForm("loginForm"));

    // メール形式チェック
    function isValidEmail(v) {
      return /^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(v);
    }

    // パスワードリセット
    document.getElementById("resetSubmit").addEventListener("click", async () => {
      const email = document.getElementById("resetEmail").value.trim();
      const errorEl = document.getElementById("resetError");
      if (!isValidEmail(email)) {
        errorEl.textContent = "正しいメールアドレスを入力してください。";
        return;
      }
      const { error } = await supabase.auth.resetPasswordForEmail(email, {
        redirectTo: location.origin + "/reset-password"
      });
      if (error) {
        errorEl.textContent = "送信に失敗しました。もう一度お試しください。";
      } else {
        showForm("resetSentForm");
      }
    });

    // ログイン
    document.getElementById("loginSubmit").addEventListener("click", async () => {
      const email    = document.getElementById("loginEmail").value.trim();
      const password = document.getElementById("loginPassword").value;
      const errorEl  = document.getElementById("loginError");
      if (!isValidEmail(email)) {
        errorEl.textContent = "正しいメールアドレスを入力してください。";
        return;
      }
      const { data, error } = await supabase.auth.signInWithPassword({ email, password });
      if (error) {
        errorEl.textContent = "メールアドレスまたはパスワードが正しくありません";
      } else {
        updateAuthButtons(supabase);

        // DBからPremium状態を同期してからUI表示
        if (window.syncPremiumStatus) {
          await window.syncPremiumStatus();
        }

        // 初回ログイン判定（welcomed フラグがまだない）
        var isFirstLogin = !localStorage.getItem("offframe_welcomed");
        // プレミアム判定（syncPremiumStatus でlocalStorageが更新済み）
        var isPremium = localStorage.getItem("offframe_premium") === "1";

        if (isPremium) {
          sessionStorage.setItem("show_premium_welcome", "1");
          location.href = "/";
          return;
        } else if (isFirstLogin) {
          showForm("welcomeForm");
          localStorage.setItem("offframe_welcomed", "1");
        } else {
          showForm("welcomeForm");
        }

        document.dispatchEvent(new CustomEvent("offframe:loggedin"));
      }
    });

    // 新規登録
    document.getElementById("signupSubmit").addEventListener("click", async () => {
      const email    = document.getElementById("signupEmail").value.trim();
      const password = document.getElementById("signupPassword").value;
      const errorEl  = document.getElementById("signupError");

      if (!isValidEmail(email)) {
        errorEl.textContent = "正しいメールアドレスを入力してください。";
        return;
      }
      if (password.length < 6) {
        errorEl.textContent = "パスワードは6文字以上で入力してください。";
        return;
      }
      const { data, error } = await supabase.auth.signUp({ email, password });
      if (error) {
        if (error.message.includes("already registered") || error.message.includes("User already registered")) {
          errorEl.textContent = "このメールアドレスはすでに登録されています。";
        } else {
          errorEl.textContent = "登録に失敗しました。もう一度お試しください。";
        }
      } else if (data.user && data.user.identities && data.user.identities.length === 0) {
        errorEl.textContent = "このメールアドレスはすでに登録されています。";
      } else {
        showForm("confirmEmailForm");
      }
    });

    // ログアウト確認
    const logoutOverlay = document.getElementById("logoutOverlay");
    window.handleLogout = () => {
      logoutOverlay.classList.add("open");
    };
    document.getElementById("logoutNo").addEventListener("click", () => {
      logoutOverlay.classList.remove("open");
    });
    document.getElementById("logoutYes").addEventListener("click", async () => {
      await supabase.auth.signOut();
      localStorage.removeItem("offframe");
      localStorage.removeItem("offframe_premium");
      localStorage.removeItem("offframe_welcomed");
      logoutOverlay.classList.remove("open");
      updateAuthButtons(supabase);
      // OffFrameボタンをリセット（表示も復元）
      ["offframeBtn", "drawerOffframeBtn", "overlayOffframeBtn"].forEach(function(id) {
        var b = document.getElementById(id);
        if (b) { b.classList.remove("active"); b.textContent = "Standard"; b.style.display = ""; }
      });
      // Premiumボタンをリセット
      ["sidenavPremiumBtn", "drawerPremiumBtn", "overlayPremiumBtn"].forEach(function(id) {
        var b = document.getElementById(id);
        if (b) { b.classList.remove("active"); }
      });
      // 画像をスタンダードに戻す
      document.querySelectorAll("img.switchable").forEach(function(img) {
        img.classList.add("blurring");
        setTimeout(function() {
          img.src = img.dataset.general;
          setTimeout(function() { img.classList.remove("blurring"); }, 100);
        }, 300);
      });
      const doneOverlay = document.getElementById("logoutDoneOverlay");
      doneOverlay.classList.add("open");
      document.dispatchEvent(new CustomEvent("offframe:loggedout"));
      setTimeout(() => { location.href = "/"; }, 2000);
    });

    // プレミアム加入後、TOPに戻ってきたらモーダル+吹き出し
    if (sessionStorage.getItem("show_premium_welcome") === "1") {
      sessionStorage.removeItem("show_premium_welcome");
      // 初回の showTipBubble を抑制するため dismissed をセット
      sessionStorage.setItem("tip_phase", "2");
      sessionStorage.setItem("tip_dismissed", "2");
      showForm("welcomePremiumForm");
      overlayEl.classList.add("open");
      // モーダル表示後に吹き出しを出す
      setTimeout(function() {
        sessionStorage.removeItem("tip_dismissed");
        if (typeof showTipBubble === "function") {
          showTipBubble();
        }
      }, 800);
    }

    updateAuthButtons(supabase);
  }

  async function updateAuthButtons(supabase) {
    const { data: { session } } = await supabase.auth.getSession();
    document.querySelectorAll(".auth-login-btn").forEach(el => {
      el.style.display = session ? "none" : "block";
    });
    document.querySelectorAll(".auth-mypage-btn").forEach(el => {
      el.style.display = session ? "block" : "none";
    });
    document.querySelectorAll("#authStatus, #drawerAuthStatus").forEach(el => {
      el.style.display = session ? "flex" : "none";
    });
  }

  document.addEventListener("astro:page-load", initAuth);
  initAuth();
</script>