<script is:inline src="https://cdn.jsdelivr.net/npm/@supabase/supabase-js@2/dist/umd/supabase.min.js"></script>
<script define:vars={{ SUPABASE_URL, SUPABASE_KEY }}>
  function initMyPage() {
    if (!window.supabase) { setTimeout(initMyPage, 100); return; }

    const supabase = window.supabase.createClient(SUPABASE_URL, SUPABASE_KEY);

    async function updateState() {
      const { data: { session } } = await supabase.auth.getSession();
      const isPremium = localStorage.getItem("offframe_premium") === "1";

      document.getElementById("stateGuest").style.display   = !session ? "block" : "none";
      document.getElementById("stateFree").style.display    = session && !isPremium ? "block" : "none";
      document.getElementById("statePremium").style.display = session && isPremium  ? "flex" : "none";
    }

    updateState().then(() => {
      if (location.hash) {
        const el = document.querySelector(location.hash);
        if (el) {
          const y = el.getBoundingClientRect().top + window.scrollY - 150;
          window.scrollTo({ top: y, behavior: "instant" });
        }
      }
    });

    // 登録ボタン（Stripe実装後に差し替え）
    const subscribeBtn = document.getElementById("subscribeBtn");
    if (subscribeBtn) {
      subscribeBtn.addEventListener("click", () => {
        alert("Stripe実装後にここで決済を開始します");
      });
    }

    // 解約
    const cancelOverlay = document.getElementById("cancelOverlay");
    const cancelBtn = document.getElementById("cancelBtn");
    if (cancelBtn) {
      cancelBtn.addEventListener("click", () => cancelOverlay.classList.add("open"));
    }

    document.getElementById("cancelNo").addEventListener("click", () => {
      cancelOverlay.classList.remove("open");
    });

    document.getElementById("cancelYes").addEventListener("click", () => {
      localStorage.removeItem("offframe_premium");
      cancelOverlay.classList.remove("open");
      updateState();
    });
  }

  document.addEventListener("astro:page-load", initMyPage);
  initMyPage();
</script>